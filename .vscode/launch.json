{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/serve",
      "output": "${workspaceFolder}/.build/serve",
      "cwd": "${workspaceFolder}",
      "env": {
        "PORT": "3000",
        "DEV_SSR": "true"
      },
      "showLog": false,
      "serverReadyAction": {
        "pattern": "Server: (https?://[^\\s]+)",
        "action": "startDebugging",
        "name": "Chrome"
      }
    },
    {
      "name": "Watcher",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/watch",
      "output": "${workspaceFolder}/.build/watch",
      "cwd": "${workspaceFolder}",
      "env": {
        "TEMPL_CMD": "${env:HOME}/go/bin/templ",
        "DEV_SSR": "true"
      },
      "showLog": false
    },
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/dist",
      "userDataDir": "${workspaceFolder}/.build/chrome-debug-profile",
      "runtimeArgs": [
        "--auto-open-devtools-for-tabs",
        "--disable-features=QuitConfirmation"
      ],
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Dev Mode",
      "configurations": ["Server", "Watcher"],
      "stopAll": true,
      "preLaunchTask": "build-assets"
    }
  ]
}

package components

templ DevControls() {
	<div
		x-cloak
		x-show="$store.devControls?.enabled"
		x-data="devControls()"
		class="js-only fixed top-4 left-4 z-50"
	>
		<div
			class="relative flex items-center gap-2 bg-slate-50 border border-slate-200 px-3 py-2 shadow-sm transition-all duration-150 dark:bg-slate-900 dark:border-slate-700"
			style="font-family: var(--font-sans); font-size: 12px; line-height: 1.5;"
		>
			<div class="flex items-center gap-2">
				<span class="text-slate-600 dark:text-slate-400 font-medium">Glass</span>
				<button
					type="button"
					@click.stop="$store.devControls.toggleGlass()"
					class="relative inline-flex h-4 w-7 items-center transition-colors"
					:class="$store.devControls.glassEnabled ? 'bg-slate-800 dark:bg-slate-200' : 'bg-slate-300 dark:bg-slate-700'"
					role="switch"
					:aria-checked="$store.devControls.glassEnabled"
				>
					<span
						class="inline-block h-3 w-3 transform transition-transform"
						:class="$store.devControls.glassEnabled ? 'translate-x-3.5 bg-white dark:bg-slate-900' : 'translate-x-0.5 bg-white dark:bg-slate-500'"
					></span>
				</button>
			</div>
		</div>
	</div>
}
